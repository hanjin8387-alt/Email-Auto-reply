<Window x:Class="MailTriageAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:MailTriageAssistant.Helpers"
        mc:Ignorable="d"
        Title="메일 분류 도우미"
        Height="720"
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <helpers:ScoreToColorConverter x:Key="ScoreToColor" />
        <helpers:ScoreToLabelConverter x:Key="ScoreToLabel" />
        <helpers:RedactionConverter x:Key="Redaction" />
        <helpers:CategoryToIconConverter x:Key="CategoryToIcon" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" LastChildFill="False" Margin="0,0,0,8">
            <Button Content="메일 분류 실행"
                    Command="{Binding LoadEmailsCommand}"
                    MinWidth="140"
                    Padding="10,6"
                    Margin="0,0,8,0"
                    AutomationProperties.Name="메일 분류 실행"
                    ToolTip="Outlook Inbox에서 최근 메일을 불러와 우선순위를 계산합니다."
                    TabIndex="0" />
            <Button Content="Digest 복사 + Teams 열기"
                    Command="{Binding GenerateDigestCommand}"
                    MinWidth="200"
                    Padding="10,6"
                    Margin="0,0,16,0"
                    AutomationProperties.Name="Digest 복사 및 Teams 열기"
                    ToolTip="우선순위 상위 메일 Digest를 복사하고 Teams를 엽니다."
                    TabIndex="1" />

            <TextBlock Text="Teams 사용자 이메일:"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0" />
            <TextBox Text="{Binding TeamsUserEmail, UpdateSourceTrigger=PropertyChanged}"
                     Width="260"
                     VerticalAlignment="Center"
                     AutomationProperties.Name="Teams 사용자 이메일 입력"
                     ToolTip="Teams에서 채팅을 열 사용자 이메일 주소 (옵션)"
                     TabIndex="2" />

            <ProgressBar IsIndeterminate="True"
                         Width="120"
                         Height="10"
                         Margin="16,0,0,0"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                         VerticalAlignment="Center" />
        </DockPanel>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="우선순위 메일" FontSize="16" FontWeight="SemiBold" Margin="4,2,0,8" />

                <Grid Grid.Row="1">
                    <ListBox ItemsSource="{Binding Emails}"
                             SelectedItem="{Binding SelectedEmail, Mode=TwoWay}"
                             BorderThickness="0"
                             AutomationProperties.Name="메일 목록"
                             ToolTip="우선순위 기준으로 정렬된 메일 목록"
                             TabIndex="3">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8"
                                        Margin="0,0,0,6"
                                        Background="{StaticResource Brush.PanelBackground}"
                                        CornerRadius="6"
                                        BorderBrush="{StaticResource Brush.BorderSubtle}"
                                        BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource Brush.PanelBackground}" />
                                            <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderSubtle}" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource Brush.SurfaceBackground}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource Brush.WindowBackground}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource Brush.TextPrimary}" />
                                                    <Setter Property="BorderThickness" Value="2" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Score}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="{Binding Score, Converter={StaticResource ScoreToColor}}" />
                                            <TextBlock Text="{Binding Score, Converter={StaticResource ScoreToLabel}}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Brush.TextMuted}" />
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <Border Background="{StaticResource Brush.StatusBackground}" CornerRadius="10" Padding="6,1" Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding Category, Converter={StaticResource CategoryToIcon}}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource Brush.TextPrimary}" />
                                                </Border>
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource Brush.TextTertiary}"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Sender, Converter={StaticResource Redaction}}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Text="{Binding Subject, Converter={StaticResource Redaction}}" Foreground="{StaticResource Brush.TextPrimary}" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Text="{Binding ReceivedTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Brush.TextMuted}"
                                                       Margin="0,2,0,0" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Margin="10"
                            Padding="16"
                            Background="{StaticResource Brush.SurfaceBackground}"
                            BorderBrush="{StaticResource Brush.BorderSubtle}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Emails.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="표시할 메일이 없습니다"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Brush.TextPrimary}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="상단의 '메일 분류 실행'을 눌러 Outlook에서 불러오세요."
                                       Margin="0,6,0,0"
                                       Foreground="{StaticResource Brush.TextMuted}"
                                       TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8" Padding="12">
            <Grid>
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedEmail}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="{Binding SelectedEmail.Subject, Converter={StaticResource Redaction}}" FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="{Binding SelectedEmail.Sender, Converter={StaticResource Redaction}}" Foreground="{StaticResource Brush.TextSecondary}" />
                        <TextBlock Text="  •  " Foreground="{StaticResource Brush.Separator}" />
                        <TextBlock Text="{Binding SelectedEmail.ReceivedTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Foreground="{StaticResource Brush.TextSecondary}" />
                        <TextBlock Text="  •  " Foreground="{StaticResource Brush.Separator}" />
                        <TextBlock Text="{Binding SelectedEmail.ActionHint}" Foreground="{StaticResource Brush.TextSecondary}" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="마스킹된 본문 요약" FontWeight="SemiBold" Margin="0,12,0,6" />

                <TextBox Grid.Row="2"
                         Text="{Binding SelectedEmail.RedactedSummary}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         BorderBrush="{StaticResource Brush.BorderSubtle}"
                         BorderThickness="1"
                         Background="{StaticResource Brush.SurfaceBackground}"
                         Padding="10" />

                <Grid Grid.Row="3" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="답장 템플릿" FontWeight="SemiBold" Margin="0,0,0,6" />
                        <ComboBox ItemsSource="{Binding Templates}"
                                  SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                                  DisplayMemberPath="Title"
                                  MinWidth="280"
                                  AutomationProperties.Name="답장 템플릿 선택"
                                  ToolTip="선택한 템플릿으로 Outlook 답장 초안을 생성합니다."
                                  TabIndex="4" />
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Copilot용 복사"
                            Command="{Binding CopySelectedCommand}"
                            MinWidth="140"
                            Padding="10,6"
                            Margin="12,18,0,0"
                            AutomationProperties.Name="요약 복사"
                            ToolTip="선택한 메일의 마스킹된 요약을 클립보드에 복사합니다. (30초 후 자동 삭제)"
                            TabIndex="5" />
                    <Button Grid.Column="2"
                            Content="템플릿 답장"
                            Command="{Binding ReplyCommand}"
                            MinWidth="160"
                            Padding="10,6"
                            Margin="8,18,0,0"
                            AutomationProperties.Name="템플릿 답장"
                            ToolTip="선택한 템플릿으로 Outlook 답장 초안을 생성합니다."
                            TabIndex="6" />
                    <Button Grid.Column="3"
                            Content="Digest 복사 + Teams"
                            Command="{Binding GenerateDigestCommand}"
                            MinWidth="170"
                            Padding="10,6"
                            Margin="8,18,0,0"
                            AutomationProperties.Name="Digest 복사 및 Teams 열기"
                            ToolTip="우선순위 상위 메일 Digest를 복사하고 Teams를 엽니다."
                            TabIndex="7" />
                </Grid>
                </Grid>

                <Border Background="{StaticResource Brush.SurfaceBackground}"
                        BorderBrush="{StaticResource Brush.BorderSubtle}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedEmail}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="메일을 선택하세요"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Brush.TextPrimary}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="왼쪽 목록에서 메일을 선택하면 마스킹된 요약이 표시됩니다."
                                   Margin="0,6,0,0"
                                   Foreground="{StaticResource Brush.TextMuted}"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0" Padding="10,6" Background="{StaticResource Brush.StatusBackground}" CornerRadius="8">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource Brush.TextPrimary}" />
        </Border>
    </Grid>
</Window>
