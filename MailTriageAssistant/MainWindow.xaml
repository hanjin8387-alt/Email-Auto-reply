<Window x:Class="MailTriageAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:MailTriageAssistant.Helpers"
        mc:Ignorable="d"
        Title="{DynamicResource Str.MainWindow.Title}"
        Height="720"
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <helpers:ScoreToColorConverter x:Key="ScoreToColor" />
        <helpers:ScoreToLabelConverter x:Key="ScoreToLabel" />
        <helpers:RedactionConverter x:Key="Redaction" />
        <helpers:CategoryToIconConverter x:Key="CategoryToIcon" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" LastChildFill="False" Margin="0,0,0,8">
            <Button Content="{DynamicResource Str.Button.LoadEmails}"
                    Command="{Binding LoadEmailsCommand}"
                    MinWidth="140"
                    Padding="10,6"
                    Margin="0,0,8,0"
                    AutomationProperties.Name="{DynamicResource Str.Automation.LoadEmails}"
                    ToolTip="{DynamicResource Str.Tooltip.LoadEmails}"
                    TabIndex="0" />
            <Button Content="{DynamicResource Str.Button.GenerateDigestTeams}"
                    Command="{Binding GenerateDigestCommand}"
                    MinWidth="200"
                    Padding="10,6"
                    Margin="0,0,16,0"
                    AutomationProperties.Name="{DynamicResource Str.Automation.GenerateDigestTeams}"
                    ToolTip="{DynamicResource Str.Tooltip.GenerateDigestTeams}"
                    TabIndex="1" />

            <TextBlock Text="{DynamicResource Str.Label.TeamsUserEmail}"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0" />
            <TextBox Text="{Binding TeamsUserEmail, UpdateSourceTrigger=PropertyChanged}"
                     Width="260"
                     VerticalAlignment="Center"
                     AutomationProperties.Name="{DynamicResource Str.Automation.TeamsUserEmailInput}"
                     ToolTip="{DynamicResource Str.Tooltip.TeamsUserEmail}"
                     TabIndex="2" />

            <ProgressBar IsIndeterminate="True"
                         Width="120"
                         Height="10"
                         Margin="16,0,0,0"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                         VerticalAlignment="Center" />

            <TextBlock Text="{Binding AutoRefreshStatusText}"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       Foreground="{StaticResource Brush.TextMuted}" />
        </DockPanel>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Margin="4,2,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{DynamicResource Str.Header.PriorityEmails}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" />

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding CategoryFilterOptions}"
                              SelectedItem="{Binding SelectedCategoryFilter, Mode=TwoWay}"
                              DisplayMemberPath="Label"
                              MinWidth="180"
                              Margin="10,0,0,0"
                              AutomationProperties.Name="{DynamicResource Str.Automation.CategoryFilter}"
                              ToolTip="{DynamicResource Str.Tooltip.CategoryFilter}"
                              TabIndex="3" />
                </Grid>

                <Grid Grid.Row="1">
                    <ListBox ItemsSource="{Binding EmailsView}"
                             SelectedItem="{Binding SelectedEmail, Mode=TwoWay}"
                             BorderThickness="0"
                             AutomationProperties.Name="{DynamicResource Str.Automation.EmailList}"
                             ToolTip="{DynamicResource Str.Tooltip.EmailList}"
                             TabIndex="4"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8"
                                        Margin="0,0,0,6"
                                        Background="{StaticResource Brush.PanelBackground}"
                                        CornerRadius="6"
                                        BorderBrush="{StaticResource Brush.BorderSubtle}"
                                        BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource Brush.PanelBackground}" />
                                            <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderSubtle}" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource Brush.SurfaceBackground}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource Brush.WindowBackground}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource Brush.TextPrimary}" />
                                                    <Setter Property="BorderThickness" Value="2" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Score}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="{Binding Score, Converter={StaticResource ScoreToColor}}" />
                                            <TextBlock Text="{Binding Score, Converter={StaticResource ScoreToLabel}}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Brush.TextMuted}" />
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <Border Background="{StaticResource Brush.StatusBackground}" CornerRadius="10" Padding="6,1" Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding Category, Converter={StaticResource CategoryToIcon}}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource Brush.TextPrimary}" />
                                                </Border>
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource Brush.TextTertiary}"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding RedactedSender}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Text="{Binding RedactedSubject}" Foreground="{StaticResource Brush.TextPrimary}" TextTrimming="CharacterEllipsis" />
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="{Binding ReceivedTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource Brush.TextMuted}" />
                                                <TextBlock Text="{DynamicResource Str.Text.AttachmentMarker}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource Brush.TextMuted}"
                                                           Visibility="{Binding HasAttachments, Converter={StaticResource BoolToVis}}"
                                                           ToolTip="{DynamicResource Str.Tooltip.Attachment}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Margin="10"
                            Padding="16"
                            Background="{StaticResource Brush.SurfaceBackground}"
                            BorderBrush="{StaticResource Brush.BorderSubtle}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Emails.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource Str.Empty.EmailList.Title}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Brush.TextPrimary}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{DynamicResource Str.Empty.EmailList.Body}"
                                       Margin="0,6,0,0"
                                       Foreground="{StaticResource Brush.TextMuted}"
                                       TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8" Padding="12">
            <Grid>
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedEmail}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="{Binding SelectedEmail.Subject, Converter={StaticResource Redaction}}" FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="{Binding SelectedEmail.Sender, Converter={StaticResource Redaction}}"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />
                        <TextBlock Text="  •  " Foreground="{StaticResource Brush.Separator}" />
                        <TextBlock Text="{Binding SelectedEmail.ReceivedTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Foreground="{StaticResource Brush.TextSecondary}" />
                        <TextBlock Text="  •  " Foreground="{StaticResource Brush.Separator}" />
                        <TextBlock Text="{Binding SelectedEmail.ActionHint}"
                                   Foreground="{StaticResource Brush.TextSecondary}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="{DynamicResource Str.Label.RedactedSummary}" FontWeight="SemiBold" Margin="0,12,0,6" />

                <Grid Grid.Row="2">
                    <TextBox Text="{Binding SelectedEmail.RedactedSummary}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             BorderBrush="{StaticResource Brush.BorderSubtle}"
                             BorderThickness="1"
                             Background="{StaticResource Brush.SurfaceBackground}"
                             Padding="12" />

                    <Border Background="#80FFFFFF"
                            BorderBrush="{StaticResource Brush.BorderSubtle}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsLoading}" Value="True" />
                                            <Condition Binding="{Binding SelectedEmail.IsBodyLoaded}" Value="False" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="160" Height="10" />
                            <TextBlock Text="본문을 불러오는 중..."
                                       Margin="0,10,0,0"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource Brush.TextMuted}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="3" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{DynamicResource Str.Label.ReplyTemplate}" FontWeight="SemiBold" Margin="0,0,0,6" />
                        <ComboBox ItemsSource="{Binding Templates}"
                                  SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                                  DisplayMemberPath="Title"
                                  MinWidth="280"
                                  AutomationProperties.Name="{DynamicResource Str.Automation.ReplyTemplateSelect}"
                                  ToolTip="{DynamicResource Str.Tooltip.ReplyTemplateSelect}"
                                  TabIndex="5" />
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="{DynamicResource Str.Button.OpenInOutlook}"
                            Command="{Binding OpenInOutlookCommand}"
                            MinWidth="140"
                            Padding="10,6"
                            Margin="12,18,0,0"
                            AutomationProperties.Name="{DynamicResource Str.Button.OpenInOutlook}"
                            ToolTip="{DynamicResource Str.Tooltip.OpenInOutlook}"
                            TabIndex="6" />
                    <Button Grid.Column="2"
                            Content="{DynamicResource Str.Button.CopyForCopilot}"
                            Command="{Binding CopySelectedCommand}"
                            MinWidth="140"
                            Padding="10,6"
                            Margin="8,18,0,0"
                            AutomationProperties.Name="{DynamicResource Str.Button.CopyForCopilot}"
                            ToolTip="{DynamicResource Str.Tooltip.CopyForCopilot}"
                            TabIndex="7" />
                    <Button Grid.Column="3"
                            Content="{DynamicResource Str.Button.TemplateReply}"
                            Command="{Binding ReplyCommand}"
                            MinWidth="160"
                            Padding="10,6"
                            Margin="8,18,0,0"
                            AutomationProperties.Name="{DynamicResource Str.Button.TemplateReply}"
                            ToolTip="{DynamicResource Str.Tooltip.TemplateReply}"
                            TabIndex="8" />
                    <Button Grid.Column="4"
                            Content="{DynamicResource Str.Button.DigestCopyTeams}"
                            Command="{Binding GenerateDigestCommand}"
                            MinWidth="170"
                            Padding="10,6"
                            Margin="8,18,0,0"
                            AutomationProperties.Name="{DynamicResource Str.Automation.GenerateDigestTeams}"
                            ToolTip="{DynamicResource Str.Tooltip.DigestCopyTeams}"
                            TabIndex="9" />
                </Grid>
                </Grid>

                <Border Background="{StaticResource Brush.SurfaceBackground}"
                        BorderBrush="{StaticResource Brush.BorderSubtle}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedEmail}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource Str.Empty.Selection.Title}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Brush.TextPrimary}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{DynamicResource Str.Empty.Selection.Body}"
                                   Margin="0,6,0,0"
                                   Foreground="{StaticResource Brush.TextMuted}"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0" Padding="12" Background="{StaticResource Brush.StatusBackground}" CornerRadius="8">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource Brush.TextPrimary}" />
        </Border>
    </Grid>
</Window>
